<!-- 判断是否在首页、注册、登录页面，使用 id="navbar" -->
<% if current_page?('/') || current_page?('/users/sign_up') || current_page?('/users/sign_in')%>
<nav class="navbar navbar-default navbar-fixed-top navbar-style" id="navbar" style="padding-left:10%;padding-right:10%" role="navigation">
<% else %>
<!-- 非首页使用 class="show_bgcolor" -->
  <nav class="navbar navbar-default navbar-fixed-top show_bgcolor" style="padding-left:10%;padding-right:10%" role="navigation">
<% end %>
    <div class="container-fluid" >
      <!-- logo-->
     <div class="navbar-header">
      <a href="/" class="navbar-brand">山货</a>
      <!-- <a class="navbar-brand" href="/"><img src='<%= image_url 'icon1.png' %>' >Fitness</a> -->



        <!-- 响应式导航 -->
        <button type="button" class="navbar-toggle" data-toggle="collapse"
                data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
    </div>

    <!-- links -->
    <div class="navbar-collapse navbar-ex1-collapse collapse "  id="myNavbar">

                 <!-- 分类 -->
              <ul class="nav navbar-nav" >
                 <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">商品分类<span class="caret"></span></a>
                   <ul class="dropdown-menu" role="menu">
                     <li><%= link_to("全部商品", products_path, class: "li-style") %></li>
                     <li><%= link_to("源系", yuan_products_path, class: "li-style") %></li>
                     <li><%= link_to("润系", run_products_path, class: "li-style") %></li>
                     <li><%= link_to("臻系", zhen_products_path, class: "li-style") %></li>

                  </ul>

                </li>

             </ul>



            <ul class="nav navbar-nav navbar-right">
               <li>
                <%= link_to carts_path do %>
                 购物车 <i class="fa fa-shopping-cart"></i> ( <%= current_cart.products.count %> )
                <% end %>
              </li>
            <% if !current_user %>
              <li><%= link_to("注册", new_user_registration_path) %> </li>
              <li><%= link_to(content_tag(:i, '登入', class: 'fa fa-sign-in'), new_user_session_path) %></li>
            <% else %>
              <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.name %>
                  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                  <li>
                    <%= link_to("已收藏的商品", account_products_path) %>
                  </li>
                  <li>
                    <%= link_to("个人订单列表", account_orders_path) %>
                  </li>
                   <% if current_user.admin? %>
                  <li>
                   <%= link_to("管理员", admin_products_path) %>
                  </li>
                   <% end %>
                  <li> <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %> </li>
                </ul>
              </li>
            <% end %>

            </ul>

            <!-- 搜索输入框 -->
           <ul class="navbar-form navbar-right" >
           <ol> <%= render :partial => "products/search_bar"  %></ol>
          </ul>





          </div>
      </div>

</nav>
