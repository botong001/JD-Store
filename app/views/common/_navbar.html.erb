
<div class="row">
  <div class="col-md-12">

              <!-- 判断是否在首页、注册、登录页面，使用 id="navbar" -->
              <% if current_page?('/')%>
      <div class="navbar navbar-default navbar-fixed-top " id="navbar" role="navigation">
              <% else %>
              <!-- 非首页使用 class="show_bgcolor" -->
        <div class="navbar navbar-default navbar-fixed-top show_bgcolor" role="navigation">
              <% end %>
          <div class="container" >
               <div class="navbar-header">
                     <!--=== 右侧下拉选单（移动端时显示） ===-->
                         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
                           <span class="sr-only">Toggle navigation</span>
                           <span class="icon-bar"></span>
                           <span class="icon-bar"></span>
                           <span class="icon-bar"></span>
                         </button>

                         <!--===== 网站 Logo/名称 =====-->
                         <%= link_to root_path, class: "navbar-brand logo-box scroll" do %>
                          山货
                          <!-- <i class="fa fa-google-wallet"></i> JDStore -->
                      <!-- <a class="navbar-brand" href="/"><img src='<%= image_url 'logo.png' %>' >山货</a> -->
                       <% end %>
              </div>

            <div class="collapse navbar-collapse top-nav" id="menu-4">
                           <!--=== 网站连结 ===-->
                           <ul class="nav navbar-nav navbar-left">
                             <li><%= link_to('商品列表', products_path) %></li>
                             <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">分类<span class="caret"></span></a>
                               <ul class="dropdown-menu" role="menu">
                                 <li><%= link_to("源系", yuan_products_path) %></li>
                                 <li><%= link_to("润系", run_products_path) %></li>
                                 <li><%= link_to("臻系", zhen_products_path) %></li>
                              </ul>
                            </li>
                            <li><%= link_to('特价商品', '#') %></li>
                            <li><%= link_to('品牌故事', '#') %></li>
                           </ul>

                           <!--=== 帐号操作 ===-->
                           <ul class='nav navbar-nav  navbar-right'>
                                   <li class="divider" role="separator"></li>
                                   <li>
                                    <%= link_to carts_path do %>
                                     购物车 <i class="fa fa-shopping-cart"></i> ( <%= current_cart.products.count %> )
                                    <% end %>
                                  </li>

                                <% if !current_user %>
                                      <li><%= link_to("注册", new_user_registration_path) %> </li>
                                      <li><%= link_to(content_tag(:i, '登入', class: 'fa fa-sign-in'), new_user_session_path) %></li>
                                <% else %>
                                      <li class="dropdown">
                                                 <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                    <%= current_user.name %>
                                                    <b class="caret"></b>
                                                </a>
                                      <ul class="dropdown-menu">
                                                <li>
                                                  <%= link_to("已收藏的商品", account_products_path) %>
                                                </li>
                                                <li>
                                                  <%= link_to("个人订单列表", account_orders_path) %>
                                                </li>

                                                 <% if current_user.admin? %>
                                                <li>
                                                 <%= link_to("管理员", admin_products_path) %>
                                                </li>
                                                 <% end %>
                                                 <li class="divider"> </li>
                                                <li> <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %> </li>
                                              </ul>
                                      </li>
                                <% end %>
                         </ul>


                                     <!-- 搜索输入框 -->

                            <%= form_tag search_products_path, :method => :get  do %>
                             <div class="input-group search-box">
                            <input type="text" class="form-control" name="q" placeholder="搜索商品" value="<%= params[:q] %>">
                            <div class="input-group-btn">
                              <button class="btn btn-default" type="submit">
                                <span><i class="fa fa-search"></i></span> <!-- 搜索栏图标 -->
                              </button>
                            </div>
                          </div>
                          <% end %>



           </div>
        </div>
      </div>
   </div>
  </div>
</div>
