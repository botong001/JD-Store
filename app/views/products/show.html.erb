
 <div class="container product-show">
      <div class="row">




        <!-- 主图 -->
                <div class="col-md-6">
                         <% if @product.image.present? %>
                                <%= image_tag(@product.image.medium.url, class: "thumbnail img-responsive") %>
                         <% else %>
                                <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail img-responsive") %>

                         <% end %>

              </div>

    <!-- 商品信息 -->
                <div class="col-md-6">

                  <!-- 商品标题 -->
                        <h2 class="product-title"><%= @product.title %></h2>

                  <!-- 商品简述 -->
                        <div class="product-description">
                              <p>
                                <%= simple_format(@product.description) %>
                              </p>

                        </div>

                  <!-- 商品价格 -->
                        <div class="product-price-bgcolor">
                              <div class="product-price">
                                ￥ <%= @product.price %>

                              </div>

                        </div>

                        <div class="row">
                                <div class="col-sm-6">
                                  <!-- 商品库存 -->
                                        <div class="product-quantity">
                                               库存量： <%= @product.quantity %>
                                        </div>

                                </div>

                                <div class="col-sm-6">
                                  <!-- 商品类别 -->
                                          <div class="product-quantity">
                                                类别： <%= @product.category %>
                                          </div>

                                </div>

                      </div>

                  <!-- 按钮区域 -->
                            <div class="add-to-cart-buttom row">
                              <!-- 加入购物车按钮 -->
                                    <div class="col-sm-6">
                                            <% if @product.quantity.present? && @product.quantity > 0 %>
                                              <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-danger") %>
                                            <% else %>
                                              <a href="#" class="btn btn-danger active" role="button" disabled="disabled">库存缺货ing...</a>
                                            <% end %>

                                    </div>

                                    <!-- 收藏商品按钮 -->
                                    <div class="col-sm-6 product-collection">
                                      <!-- <%= link_to("添加收藏 - 人气(26)", "#")%> -->
                                             <% if current_user && current_user.is_member_of?(@product) %>
                                               <i class="fa fa-star col-red"></i>
                                                <%= link_to('收藏'.html_safe, quit_product_path(@product), method: :post, class: "btn btn-xs btn-default") %>
                                             <% else %>
                                               <i class="fa fa-star-o"></i>
                                                <%= link_to('收藏'.html_safe,join_product_path(@product), method: :post, class: "btn btn-xs btn-default" ) %>
                                            <% end %>
                                               <span>（<%= @product.collects.count %>人气）</span><%= social_share_button_tag(@product.title, :allow_sites => %w(twitter facebook wechat google_plus weibo qq douban)) %>
                                    </div>


                            </div>

                </div>

                <!-- 商品详情区域 + 推荐展示 -->
                <div class="container">
                            <!-- 商品详情区域 + 商品评论区域 -->
                            <div class="col-md-12 product-particulars">

                                          <!-- 导航栏 -->
                                          <div class="row">
                                                <ul class="nav nav-tabs nav-justified">
                                                        <li class="active">
                                                               <a href="#tab_default_1" data-toggle="tab">商品详情</a>
                                                        </li>
                                                        <li>
                <a href="#tab_default_2" data-toggle="tab">用户评价 (<%= @product.reviews.count %>) </a>
              </li>
                                                </ul>

                                          </div>

                                          <div class="tab-content">

                                                      <!-- 商品详情区域 -->
                                                      <div class="product-particulars-box row tab-pane active" id="tab_default_1">
                                                               <%= simple_format(@product.particulars) %>
                                                      </div>




                                            <!-- 商品评论区域 --><!--对商品评论以及评星-->
                                     <div class="product-particulars-box row tab-pane" id="tab_default_2">
                                       <div class="text-center">
                                         <h3>综合评价</h3>
                                         新鲜： <div class="star-freshness" data-score= <%= @avg_review %> ></div>
                                         外观： <div class="star-look" data-score= <%= @avg_look %> ></div>
                                         价格： <div class="star-price" data-score= <%= @avg_price %> ></div>
                                       </div>
                                       <%= link_to("评价",new_product_review_path(@product), :class => "btn btn-lg btn-info") %>

                                       <hr>

                                       <% if @reviews.blank? %>
                                             <p>该商品暂时没有获得用户的评价</p>
                                       <% else %>
                                       <% @reviews.each do |review| %>
                                         <div class="reviews">
                                           <ul>
                                             <li>
                                               <div class="row">
                                                 <div class="col-xs-9 review-user-email"><%= review.user.email %></div>
                                                 <div class="col-xs-3"><%= review.created_at.strftime("%Y-%m-%d %H-%M") %></div>
                                               </div>
                                               <div class="review-comment">
                                                 新鲜： <div class="star-freshness" data-score= <%= review.freshness %> ></div>
                                                 外观： <div class="star-look" data-score= <%= review.look %> ></div>
                                                 价格： <div class="star-price" data-score= <%= review.price %> ></div>
                                                 <%= review.body %>
                                               </div>

                                               <div>
                                                 <% if review.user == current_user %>
                                                    <%= link_to("删除", product_review_path(@product, review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm pull-right") %>
                                                 <% end %>
                                                <% end %>
                                               </div>
                                             </li>
                                           </ul>
                                           <div class="review-hr">
                                             <hr>
                                           </div>
                                         </div>
                                         <% end %>
                                     </div>
                                   </div>
                                 </div>



