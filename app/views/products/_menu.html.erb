<div class="container">
<div class="row">



      <div class="orderList">
          <div class="orderList-item ">
              <div class="dropdown">
                        <button class="btn btn-reorder dropdown-toggle" type="button" data-toggle="dropdown">
                                    分类
                                      <span class="caret"></span>
                        </button>
                         <ul class="reorder dropdown-menu ">
                                      <li>
                                        <%= link_to("全部商品", products_path) %>
                                      </li>

                                      <li>
                                          <%= link_to("源品", yuan_products_path) %>
