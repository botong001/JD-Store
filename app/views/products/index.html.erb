
<!-- 头部-->
<div class="header">
  <div class="headerContent">
    <div class="logo">
      <a href="/products"><img src='<%= image_url '' %>' ></a>
    </div>
    <div class="cart-wrap">
      <div class="cart">
         <%= link_to carts_path do  %>
            购物车 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
         <% end %>
    </div>
  </div>
  <div class="search">
    <form action="/products/search" accept-charset="UTF-8" method="get">
      <input name="utf8" type="hidden" value="✓">
      <input class="search-input" type="text" name="query_string" value="" placeholder="输入你要搜索的商品">
      <button type="submit" class="search-button pa tc"><i class="fa fa-search"></i></button>
    </form>
  </div>
</div>
</div>

<!-- 分类条-->
<div class="menu ">
  <ul class="menuList">
    <li class="menuList-item">
      <a href="/products"><img src='<%= image_url 'logo1.png' %>'</a>
    </li>
    <% Category.all.each do |category| %>
     <li class="menuList-item">
       <%= link_to category.name, products_path(category: category.name), class: "link" %>
     </li>
    <% end %>
  </ul>
</div>




























<div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-4">
            <div class="card">
              <div class="img-card">
              <%= link_to product_path(product) do %>
              <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
              <%= image_tag("http://palcehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
              <% end %>
              </div>
                <div class="card-content">
                    <h4 class="card-title">
                    <%= product.title %>
                  </h4>
              </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>























