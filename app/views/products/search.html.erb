
<!-- 头部-->
<div class="header">
  <div class="headerContent">
    <div class="cart-wrap">
      <div class="cart">
         <%= link_to carts_path do  %>
            购物车 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
         <% end %>
    </div>
  </div>


   <div class="search">
      <%= form_tag search_products_path , :method => :get, :class => "products-search-form" do %>
          <input name="utf8" type="hidden" value="✓">
          <input type="text" class="search-input" name="q" value="<%= params[:q] %>" placeholder="输入你要搜索的商品">
          <button type="submit" class="search-button pa tc"><i class="fa fa-search"></i></button>
      <% end %>
    </div>
  </div>
</div>


<!-- 分类条-->
<div class="menu ">
  <ul class="menuList">
    <ol class="menuList-item">
      <a href="/">首页</a>
    </ol>
    <ol class="menuList-item">
      <a href="/products">全部商品</a>
    </ol>
    <% Category.all.each do |category| %>
     <ol class="menuList-item">
       <%= link_to category.name, products_path(category: category.name), class: "link" %>
     </ol>
    <% end %>
  </ul>
</div>

<!-- 搜索结果 -->
<div class="container">
  <div class="row">
    <% if @products.blank?%>
      <br>
      <h3 class="text-center">
        无相应的搜索结果！
      </h3>
    <% else %>
      <h3 class="text-center" style="margin-top: 30px;">找到 <%= @products.count %> 个结果</h3>
      <hr />
            <% @products.each do |product| %>
              <div class="col-xs-12 col-sm-3">
                  <div class="productList">
                    <div class="img-productList">
                    <%= link_to product_path(product) do %>
                    <% if product.image.present? %>
                    <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                    <% else %>
                    <%= image_tag("http://palcehold.it/200x200&text=No Pic", class: "thumbnail") %>
                    <% end %>
                    <% end %>
                    </div>
                      <div class="productList-content">
                          <h4 class="productList-title">
                          <%= link_to(render_highlight_content(product, @query_string), product_path(product)) %>

                        </h4>
                    </div>
                </div>
              </div>
              <% end %>
          </div>

       <div class="text-center">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
      </div>
    <% end %>

  </div>
